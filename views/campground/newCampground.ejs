
<% include ../partial/header.ejs %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Create  new Campground</h3>
        <div style="width: 30%; margin:30px auto">
              <form action="/campgrounds" method="POST">
                  <div class="form-group">
                      <input class="form-control" type="text" name="name" placeholder="Enter Campground name">
                  </div>
                  <div class="form-group">
                      <input class="form-control"type="text" name="image" placeholder="image url">
                  </div>
                    <div class="form-group">
                      <textarea class="form-control" name="description" placeholder="Description"></textarea>
                  </div>
                  <div class="form-group">
                      <label for="location">Location</label>
                      <input class="form-control" type="text" name="location" id="location" placeholder="electronic city,BLR">
                  </div>
                   <div class="form-group">
                      Rs.<input type="number" clas="for-control" name="cost" min="1" step="1" placeholder="Rupees."> per Night
                  </div>
                  <div class="form-group">
                     <button class="bn btn-primary btn-lg btn-block">Submit</button>
                  </div>
                </form>
             <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

